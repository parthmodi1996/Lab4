<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="630.0" prefWidth="872.0" style="-fx-background-img: #008000" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="poker.app.view.RootLayoutController">
   <top>
      <MenuBar style="-fx-background-color: #006400;" BorderPane.alignment="CENTER">
        <menus>
            <Menu fx:id="mnuGame" mnemonicParsing="false" text="Game">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                  <RadioMenuItem mnemonicParsing="false" text="Five Stud" />
                  <RadioMenuItem mnemonicParsing="false" text="Five Stud 1 Joker" />
                  <RadioMenuItem mnemonicParsing="false" text="Five Stud 2 Joker" />
                  <RadioMenuItem mnemonicParsing="false" text="Deuces Wild" />
                  <RadioMenuItem mnemonicParsing="false" text="Texas Hold Em" />
                  <RadioMenuItem mnemonicParsing="false" text="Omaha" />
                  <RadioMenuItem mnemonicParsing="false" text="Seven Draw" />
                  <RadioMenuItem mnemonicParsing="false" text="Aces and Eight" />
              </items>
            </Menu>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleNew" text="New" />
              <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Open..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Save" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Save As..." />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Statistics">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleShowBirthdayStatistics" text="Show Statistics" />
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
